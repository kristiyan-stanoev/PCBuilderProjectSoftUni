@model PCBuilder.Common.Models.BindingModels.HardDiskDriveBindingModel

@{
    ViewData["Title"] = "Create";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @(TempData["Error"])
    </div>
}

<h2>Create</h2>

<h4>HardDiskDrive</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModelName" class="control-label"></label>
                <input asp-for="ModelName" class="form-control" />
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemoryCapacity" class="control-label"></label>
                <input asp-for="MemoryCapacity" class="form-control" placeholder="GB" />
                <span asp-validation-for="MemoryCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rpm" class="control-label"></label>
                <input asp-for="Rpm" class="form-control" />
                <span asp-validation-for="Rpm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReadSpeed" class="control-label"></label>
                <input asp-for="ReadSpeed" class="form-control" placeholder="MB/s" />
                <span asp-validation-for="ReadSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WriteSpeed" class="control-label"></label>
                <input asp-for="WriteSpeed" class="form-control" placeholder="MB/s"/>
                <span asp-validation-for="WriteSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cache" class="control-label"></label>
                <input asp-for="Cache" class="form-control" placeholder="MB" />
                <span asp-validation-for="Cache" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Interface" class="control-label"></label>
                <input asp-for="Interface" class="form-control" />
                <span asp-validation-for="Interface" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" placeholder="$" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" asp-controller="HardDiskDrives" asp-area="" class="btn btn-default">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
