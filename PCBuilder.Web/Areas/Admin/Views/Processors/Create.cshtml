@model PCBuilder.Common.Models.BindingModels.ProcessorBindingModel

@{
    ViewData["Title"] = "Create";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @(TempData["Error"])
    </div>
}

<h2>Create</h2>

<h4>Processor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModelName" class="control-label"></label>
                <input asp-for="ModelName" class="form-control" />
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Architecture" class="control-label"></label>
                <input asp-for="Architecture" class="form-control" />
                <span asp-validation-for="Architecture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Socket" class="control-label"></label>
                <input asp-for="Socket" class="form-control" />
                <span asp-validation-for="Socket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfCores" class="control-label"></label>
                <input asp-for="NumberOfCores" class="form-control" />
                <span asp-validation-for="NumberOfCores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Frequency" class="control-label"></label>
                <input asp-for="Frequency" class="form-control" placeholder="GHz" />
                <span asp-validation-for="Frequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cache" class="control-label"></label>
                <input asp-for="Cache" class="form-control" placeholder="MB" />
                <span asp-validation-for="Cache" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Power" class="control-label"></label>
                <input asp-for="Power" class="form-control" placeholder="W" />
                <span asp-validation-for="Power" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="MemoryType" class="control-label"></label>
                <input asp-for="MemoryType" class="form-control" />
                <span asp-validation-for="MemoryType" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="MaxMemorySize" class="control-label"></label>
                <input asp-for="MaxMemorySize" class="form-control" placeholder="GB" />
                <span asp-validation-for="MaxMemorySize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" placeholder="$" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" asp-controller="Cases" asp-area="" class="btn btn-default">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
