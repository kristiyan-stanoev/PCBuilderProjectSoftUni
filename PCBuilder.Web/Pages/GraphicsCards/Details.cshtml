        </dt>
        <dd>
            @Html.DisplayFor(model => Model.GraphicsCard.Manufacturer)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => Model.GraphicsCard.ModelName)
        </dt>
        <dd>
            @Html.DisplayFor(model => Model.GraphicsCard.ModelName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => Model.GraphicsCard.Architecture)
        </dt>
        <dd>
            @Html.DisplayFor(model => Model.GraphicsCard.Architecture)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => Model.GraphicsCard.Socket)
        </dt>
        <dd>
            @Html.DisplayFor(model => Model.GraphicsCard.Socket)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => Model.GraphicsCard.Pipelines)
        </dt>
        <dd>
            @Html.DisplayFor(model => Model.GraphicsCard.Pipelines)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => Model.GraphicsCard.CoreSpeed)
        </dt>
        <dd>
            @Html.DisplayFor(model => Model.GraphicsCard.CoreSpeed) MHz
        </dd>
        <dt>
            @Html.DisplayNameFor(model => Model.GraphicsCard.MemorySpeed)
        </dt>
        <dd>
