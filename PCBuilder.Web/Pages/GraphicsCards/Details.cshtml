</div>
<div style="margin-left:110px">
    @if (this.User.IsInRole(WebConstants.AdminRole))
    {
        <a asp-page="./Edit" asp-route-id="@Model.GraphicsCard.Id" asp-area="Admin" class="btn btn-danger">Edit</a>
    }
    <a asp-page="./Index" asp-area="" class="btn btn-default">Back to List</a>
</div>
