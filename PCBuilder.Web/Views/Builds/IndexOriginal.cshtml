@model IEnumerable<PCBuilder.Common.Models.ViewModels.PCViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Build a PC</a>
</p>
<table class="table table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CaseUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Processor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GraphicsCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motherboard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Memory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfMemorySticks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PowerSupply)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HardDiskDrive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SolidStateDrive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.CaseUrl" alt="PC image" class="img-responsive" style="width:250px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Case)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Processor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GraphicsCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motherboard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfMemorySticks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PowerSupply)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HardDiskDrive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SolidStateDrive)
            </td>
            <td>
                <div style=@(this.User.Identity.Name == item.Username ? "width:100px;" : "")>
                    @*@if (this.User.IsInRole(WebConstants.AdminRole))
                    {
                        <a asp-controller="Cases" asp-action="Edit" asp-route-id="@Model.Id" asp-area="Admin" class="btn btn-warning responsive">Edit</a>
                    }*@
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    @if (this.User.Identity.Name == item.Username)
                    {
                        <a asp-controller="Builds" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    }
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
