@model IEnumerable<PCBuilder.Common.Models.ViewModels.HardDiskDriveViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>All hard disk drives</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelName)
            </th>
            <th>
                @(Html.DisplayNameFor(model => model.MemoryCapacity))(GB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rpm)
            </th>
            <th>
                @(Html.DisplayNameFor(model => model.ReadSpeed))(MB/s)
            </th>
            <th>
                @(Html.DisplayNameFor(model => model.WriteSpeed))(MB/s)
            </th>
            <th>
                @(Html.DisplayNameFor(model => model.Cache))(MB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interface)
            </th>
            <th>
                @(Html.DisplayNameFor(model => model.Price))($)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemoryCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rpm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReadSpeed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WriteSpeed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cache)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interface)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <div style=@(this.User.IsInRole(WebConstants.AdminRole) ? "width:200px" : "")>
                    @if (this.User.IsInRole(WebConstants.AdminRole))
                    {
                        <a asp-controller="HardDiskDrives" asp-action="Edit" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-warning">Edit</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    @if (this.User.IsInRole(WebConstants.AdminRole))
                    {
                        <a asp-controller="HardDIskDrives" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-danger">Delete</a>
                    }
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
