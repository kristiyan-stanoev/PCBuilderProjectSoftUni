@model PCBuilder.Common.Models.ViewModels.PowerSupplyViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Power Supply</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt style="width:180px; margin-right: 20px;">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt style="width:180px; margin-right: 20px;">
            @Html.DisplayNameFor(model => model.ModelName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ModelName)
        </dd>
        <dt style="width:180px; margin-right: 20px;">
            @Html.DisplayNameFor(model => model.Connector)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Connector)
        </dd>
        <dt style="width:180px; margin-right: 20px;">
            @Html.DisplayNameFor(model => model.NumberOfCoolingVents)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumberOfCoolingVents)
        </dd>
        <dt style="width:180px; margin-right: 20px;">
            @Html.DisplayNameFor(model => model.Power)
        </dt>
        <dd>
            @(Html.DisplayFor(model => model.Power))(W)
        </dd>
        <dt style="width:180px; margin-right: 20px;">
            @Html.DisplayNameFor(model => model.Pfc)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pfc)
        </dd>
        <dt style="width:180px; margin-right: 20px;">
            @Html.DisplayNameFor(model => model.Effectiveness)
        </dt>
        <dd>
            @(Html.DisplayFor(model => model.Effectiveness))(%)
        </dd>
        <dt style="width:180px; margin-right: 20px;">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @(Html.DisplayFor(model => model.Price))($)
        </dd>
    </dl>
</div>
<div style="margin-left:130px">
    @if (this.User.IsInRole(WebConstants.AdminRole))
    {
        <a asp-area="Admin" asp-controller="PowerSupplies" asp-action="Edit" asp-route-id="@(Model.Id)" class="btn btn-warning">Edit</a>
    }
    <a asp-action="Index" asp-controller="PowerSupplies" asp-area="" class="btn btn-default">Back to List</a>
</div>
